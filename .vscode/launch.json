    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ecom-backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/server/main.go",
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "args": [],
            "buildFlags": [],
            "output": "${workspaceFolder}/bin/debug_server.exe",
            "showLog": true,
            "trace": "verbose",
            "dlvFlags": [
                "--check-go-version=false"
            ],
            "env": {
                "GIN_MODE": "debug"
            }
        }
    ],
    "go.delveConfig": {
        "removeTmpFile": true
    }
}